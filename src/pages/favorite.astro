  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-Z5S7NX0CXN"></script>

  <style>
    .instagram-gradient {
      background-image: linear-gradient(45deg, #FFDC80, #FCAF45, #F77737, #F56040, #FD1D1D, #E1306C, #C13584, #833AB4, #5851DB, #405DE6);
    }

    .instagram-gradient:hover {
      opacity: 0.9;
    }

    /* アニメーションの定義 */
    @keyframes scaleUpAndDown {
      0% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.05);
      }
      100% {
        transform: scale(1);
      }
    }

    /* img要素にアニメーションを適用 */
    .icon {
      animation: scaleUpAndDown 0.3s ease-in-out;
    }

  </style>

