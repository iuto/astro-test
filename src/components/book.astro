---
const { url, alt } = Astro.props;
---

<style>
    .book-cover {
        box-shadow: 10px 15px 22px -5px rgba(0,0,0,.2), 0 0 2px rgba(0,0,0,.15);
    }
</style>

<figure class="rounded-lg">
    <img class="book-cover object-cover w-full aspect-[1/1.5] block rounded-lg" src={`${url}`} alt={alt}>
    <figcaption class="mt-5 text-base font-semibold text-center text-gray-500 dark:text-gray-400">{alt}</figcaption>
</figure>
